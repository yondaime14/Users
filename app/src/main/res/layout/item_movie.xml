<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<ImageView
    android:id="@+id/moviePoster"
    android:layout_width="100dp"
    android:layout_height="100dp"
    app:layout_constraintTop_toTopOf="parent"
    android:src="@mipmap/ic_launcher"
    android:layout_margin="10dp"
    app:layout_constraintStart_toStartOf="parent"
    android:padding="10dp"
    />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/movieDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/moviePoster"
        app:layout_constraintTop_toTopOf="@+id/moviePoster"
        tools:text="MOVIE TITLE" />

    <TextView
        android:id="@+id/movieDesc"
        android:layout_width="231dp"
        android:layout_height="62dp"
        android:padding="10dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textAlignment="viewStart"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/moviePoster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/moviePoster"
        app:layout_constraintTop_toBottomOf="@+id/movieTitle"
        tools:text="Lorem ipsum dolor sit amet. Et ipsum libero ut reprehenderit magnam in suscipit alias ad fuga omnis! Est consequatur accusantium qui perspiciatis amet in fugiat voluptas et enim excepturi ut impedit corporis ut dolor sint." />
</androidx.constraintlayout.widget.ConstraintLayout>